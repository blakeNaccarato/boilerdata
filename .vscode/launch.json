{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "cwd": "${workspaceFolder}/examples"
    },
    {
      "name": "CLI",
      "console": "internalConsole",
      "cwd": "${workspaceFolder}/examples",
      "type": "python",
      "request": "launch",
      "module": "boilerdata",
      "args": ["${input:input}"]
    },
    {
      "name": "CLI: Export schema",
      "console": "internalConsole",
      "cwd": "${workspaceFolder}/examples",
      "type": "python",
      "request": "launch",
      "module": "boilerdata",
      "args": ["schema", "../schema"]
    }
  ],
  "inputs": [
    {
      "id": "input",
      "type": "pickString",
      "description": "Select the command to debug.",
      "options": ["--help", "run"]
    }
  ]
}
