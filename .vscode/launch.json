{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole"
    },
    // * -------------------------------------------------------------------------- * //
    // * PROJECT-SPECIFIC * //
    {
      "name": "Update schema",
      "type": "python",
      "request": "launch",
      "module": "boilerdata",
      "args": ["utils", "schema", "${input:input}"]
    }
  ],
  "inputs": [
    {
      "id": "input",
      "type": "pickString",
      "description": "Select the schema to write to.",
      "options": ["all", "config", "trials"]
    }
  ]
}
