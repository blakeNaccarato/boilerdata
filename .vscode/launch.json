{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole"
    },
    {
      "name": "CLI",
      "console": "internalConsole",
      "type": "python",
      "request": "launch",
      "module": "boilerdata",
      "args": ["${input:input}"]
    },
    {
      "name": "CLI: Schema",
      "console": "internalConsole",
      "type": "python",
      "request": "launch",
      "module": "boilerdata",
      "args": ["schema", "--help"]
    }
  ],
  "inputs": [
    {
      "id": "input",
      "type": "pickString",
      "description": "Select the command to debug.",
      "options": ["--help", "run"]
    }
  ]
}
