{
  "$id": "boilerdata.toml.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Config",
  "type": "object",
  "properties": {
    "data_path": {
      "title": "Data Path",
      "format": "directory-path",
      "type": "string"
    },
    "fit_params": { "$ref": "#/definitions/FitParams" }
  },
  "required": ["data_path", "fit_params"],
  "definitions": {
    "FitParams": {
      "title": "FitParams",
      "type": "object",
      "properties": {
        "thermocouple_pos": {
          "title": "Thermocouple Pos",
          "type": "array",
          "items": { "type": "number" }
        },
        "do_plot": { "title": "Do Plot", "type": "boolean" }
      },
      "required": ["thermocouple_pos", "do_plot"]
    }
  }
}
