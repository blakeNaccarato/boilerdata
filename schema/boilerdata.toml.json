{
  "$id": "boilerdata.toml.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "boilerdata",
  "type": "object",
  "required": ["data_path", "fit"],
  "additionalProperties": false,
  "properties": {
    "data_path": {
      "type": "string",
      "description": "Path to the folder containing CSVs."
    },
    "fit": {
      "type": "object",
      "required": ["thermocouple_pos", "do_plot"],
      "properties": {
        "thermocouple_pos": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 5,
          "maxItems": 5
        },
        "do_plot": {
          "type": "boolean"
        }
      }
    }
  }
}
